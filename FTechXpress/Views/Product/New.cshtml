@model Product
@{
    SelectList Category = new SelectList(ViewBag.category, "ID", "Name");
}

<h1>Adding New Product</h1>
<br />
<form method="post" asp-controller="Product" asp-action="SaveNew">
	<div>
		<label asp-for="Name"  > Product Name:  </label>
		<input asp-for="Name"	/>
		<span asp-validation-for="Name" class="text-danger"></span>	
	</div>
	<br />
	<div>
		<label asp-for="Description"> Description:  </label>
		<input asp-for="Description" />
		<span asp-validation-for="Description" class="text-danger"></span>
	</div>
	<br />
	<div>
		<label asp-for="Price">Price:  </label>
		<input asp-for="Price" />
		<span asp-validation-for="Price" class="text-danger"></span>
	</div>
	<br />
	<div>
		<label asp-for="Stock">Stock:  </label>
		<input asp-for="Stock" />
		<span asp-validation-for="Stock" class="text-danger"></span>
	</div>
	<br />
	<div>
		<label asp-for="Category.ID">Category:  </label>
		<select asp-for="Category.ID" asp-items="Category">
			<option value="0">Select Category</option>
		</select>
		<span asp-validation-for="Category" class="text-danger"></span>
		

